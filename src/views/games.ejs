          <a href="/certificates" class="nav-link">Certificates</a>
          <a href="/games" class="nav-link nav-link-active">Games</a>
        </nav>
        <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme">
          <span class="theme-text"></span>
        </button>
      </header>

      <main class="main-content games-page">
        <section class="section-header">
          <h1>Mini Games</h1>
          <p>Enter your name and play. Scores are tracked per game while this page is open.</p>
        </section>

        <section class="games-grid">
          <!-- Tic Tac Toe -->
          <section class="game-card">
            <header class="game-header">
              <h2>Tic Tac Toe</h2>
              <div class="game-player-input">
                <label>
                  Player name
                  <input id="ttt-player-name" type="text" placeholder="Enter your name" />
                </label>
                <button id="ttt-start" class="btn btn-primary">Start Game</button>
              </div>
            </header>

            <div class="game-board ttt-board" id="ttt-board">
              <!-- 9 cells inserted by TypeScript -->
            </div>

            <div class="game-footer">
              <div class="score-box">
                <div class="score-label">Current Player</div>
                <div id="ttt-player-display" class="score-value">â€”</div>
              </div>
              <div class="score-box">
                <div class="score-label">Score</div>
                <div id="ttt-score" class="score-value">0</div>
              </div>
              <button id="ttt-reset" class="btn btn-ghost">Reset Board</button>
            </div>
          </section>

        </section>
      </main>

