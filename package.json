{
  "name": "talib-arkan-talib-portfolio",
  "version": "1.0.0",
  "description": "Interactive portfolio website for Talib Arkan Talib built with Node.js, Express, and TypeScript.",
  "main": "dist/server.js",
  "scripts": {
    "build:server": "tsc",
    "build:client": "tsc --project tsconfig.client.json",
    "build": "npm run build:server && npm run build:client",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report"
  },
  "keywords": [
    "portfolio",
    "node",
    "express",
    "typescript"
  ],
  "author": "Talib Arkan Talib",
  "license": "MIT",
  "dependencies": {
    "@types/nodemailer": "^7.0.4",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "nodemailer": "^7.0.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/express": "^4.17.21",
    "@types/node": "^22.9.0",
    "playwright": "^1.57.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
